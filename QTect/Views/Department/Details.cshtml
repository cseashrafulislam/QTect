@model QTect.Models.Department

<h2>Department Details</h2>

<div>
    <h4>Department Information</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Department Name:
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentName
        </dd>

        <dt class="col-sm-2">
            Manager:
        </dt>
        <dd class="col-sm-10">
            @Model.Manager?.Name
        </dd>

        <dt class="col-sm-2">
            Budget:
        </dt>
        <dd class="col-sm-10">
            @Model.Budget
        </dd>
    </dl>
</div>

<div>
    <h4>Employees in this Department</h4>

    @if (Model.Employees != null && Model.Employees.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Position</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Position</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No employees are assigned to this department.</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
