@model QTect.Models.PerformanceReview

<h2>Performance Review Details</h2>

<div>
    <h3>Review for <strong>@Model.Employee.Name</strong></h3>
    <p><strong>Review Date:</strong> @Model.ReviewDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Review Score:</strong> @Model.ReviewScore</p>
    <p><strong>Review Notes:</strong> @Model.ReviewNotes</p>
</div>

