@model IEnumerable<QTect.Models.PerformanceReview>

<h2>Performance Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Review Date</th>
            <th>Review Score</th>
            <th>Review Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Employee.Name</td>
                <td>@review.ReviewDate.ToString("yyyy-MM-dd")</td>
                <td>@review.ReviewScore</td>
                <td>@review.ReviewNotes</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.ID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@review.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@review.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Review</a>
